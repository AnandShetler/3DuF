{
  "name": "express-es6-sample",
  "version": "0.2.0",
  "private": true,
  "author": {
    "name": "Jonathan Cunanan",
    "url": "https://github.com/jcunanan05"
  },
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@jscad/csg": "^0.7.0",
    "cookie-parser": "^1.4.5",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "morgan": "~1.9.1",
    "node-uuid": "^1.4.8",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "paper": "^0.12.11",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "jest": "^25.5.4"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "start": "npm run prod",
    "build": "npm-run-all clean transpile",
    "server": "node ./dist-server/bin/www",
    "dev": "NODE_ENV=development npm-run-all build server",
    "prod": "NODE_ENV=production npm-run-all build server",
    "transpile": "babel ./server --out-dir dist-server",
    "clean": "rimraf dist-server",
    "watch:dev": "nodemon",
    "test": "jest"
  }
}
